{
  "manifest_version": 2,

  "name": "focus",
  "description": "Extension that makes sure you are keeping focus",
  "version": "1.0",

  "browser_action": {
    "default_popup": "app/main.html"
  },
  "background": {
    "scripts" : ["app/background.js", "/processor/nlp.js", "libs/compromise.min.js", "libs/synaptic.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["app/pageScript.js"]
    }
  ],
  "permissions": [
    "storage"
  ]
}
